<div class="like-link" id="like-link-<%= jiro.id %>">
  <% if user_signed_in? && current_user.favorites.find_by(jiro_id: jiro.id) %>
     <%= link_to unlike_path(jiro.id), method: :delete, remote: true do %>
         <div class = "iine__button">❤️<%= jiro.favorites.count %></div>
     <% end %>
   <% else %>
     <%= link_to like_path(jiro.id), method: :post, remote: true do %>
         <div class = "iine__button">♡️<%= jiro.favorites.count %></div>
     <% end %>
   <% end %>
</div>
