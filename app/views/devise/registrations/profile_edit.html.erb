<div class="container">
  <%= form_for @user, url: "/profile_update/#{@user.id}", method: :patch do |f| %>
  <div class="row align-items-center justify-content-center">
    <aside class="col-md-3">

        <% if @user.profile_picture? %>
          <%= image_tag @user.profile_picture.url %>
        <% else %>
          <%= image_tag "/assets/default.jpg", :size => '250x250' %>
        <% end %>
      <button type="button" class="btn btn-outline-secondary rounded-pill">
        <%= f.file_field :profile_picture, accept: 'image/jpeg,image/gif,image/png' %>
      </button>
    </aside>
  </div>
  <div class="row align-items-center justify-content-center">
    <aside class="col-md-6">
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label "自己紹介" %><br />
        <%= f.text_field :introduction %>
      </div>

      <div class="actions">
        <%= f.submit "保存する" %>
      </div>
    </aside>
  </div>
  <% end %>
</div>
